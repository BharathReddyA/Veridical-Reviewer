{
  "manifest_version": 3,
  "name": "Veridical Reviewer",
  "version": "1.0",
  "description": "A browser extension for reviewing websites",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["activeTab"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
